@using VP2.businesslogic;
@{
   VPMember m = VPMember.GetLoggedInUser();

   if (HttpContext.Current.User.Identity.IsAuthenticated && m != null)
   {
        <li><a href="/members/profile">Welcome @m.FirstName</a></li>
   }
   else 
   {       
        <li><a href="/login">Sign In&nbsp;|&nbsp;Register</a></li>
   }
}